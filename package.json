{
  "name": "graphql-auth",
  "version": "1.0.0",
  "description": "Enhanced GraphQL authentication and authorization with Pothos, Prisma, and GraphQL Shield.",
  "author": "Aleksandr Semenov",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "patch-package",
    "dev": "bun run src/app/server.ts",
    "test": "bun test",
    "test:run": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "vitest": "NODE_OPTIONS='--loader ./test/vitest-loader.mjs' vitest",
    "vitest:ui": "NODE_OPTIONS='--loader ./test/vitest-loader.mjs' vitest --ui",
    "vitest:coverage": "NODE_OPTIONS='--loader ./test/vitest-loader.mjs' vitest --coverage",
    "generate": "bun run generate:prisma && bun run generate:gql",
    "generate:prisma": "prisma generate",
    "generate:gql": "bunx gql.tada generate-output",
    "db:reset": "prisma migrate reset --force",
    "build": "bun run clean && bun run generate && NODE_ENV=production bun build src/main.ts --outdir ./dist/app --target=node --sourcemap=inline",
    "start": "NODE_ENV=production bun run dist/app/main.js",
    "clean": "rimraf dist",
    "lint": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "env:verify": "bunx @dotenv-run/cli verify",
    "graphql:examples": "bunx @dotenv-run/cli ts-node src/graphql/operations/run-examples.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.10",
    "@graphql-yoga/plugin-defer-stream": "*",
    "@graphql-yoga/plugin-disable-introspection": "*",
    "@pothos/core": "^4.7.0",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-errors": "^4.4.1",
    "@pothos/plugin-prisma": "^4.9.1",
    "@pothos/plugin-relay": "^4.4.3",
    "@pothos/plugin-scope-auth": "^4.1.5",
    "@pothos/plugin-validation": "^3.10.2",
    "@prisma/client": "^5.21.2",
    "@prisma/extension-accelerate": "^2.0.1",
    "argon2": "*",
    "bcryptjs": "^2.4.3",
    "consola": "^3.4.2",
    "dataloader": "^2.2.3",
    "fetch-cookie": "*",
    "gql.tada": "*",
    "graphql": "16.11.0",
    "graphql-scalars": "*",
    "graphql-shield": "^7.6.5",
    "graphql-sse": "*",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.13.5",
    "h3": "^1.13.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "rate-limiter-flexible": "^5.0.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@faker-js/faker": "9.8.0",
    "@graphql-tools/mock": "^9.0.23",
    "@graphql-tools/schema": "^10.0.23",
    "@types/bun": "^1.2.16",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.12.0",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^2.1.9",
    "dotenv": "^16.4.5",
    "happy-dom": "^18.0.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.4.2",
    "patch-package": "^8.0.0",
    "prisma": "^5.21.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bunx @biomejs/biome check --write",
      "bunx @biomejs/biome lint --write"
    ],
    "*.json": [
      "bunx @biomejs/biome format --write"
    ]
  },
  "resolutions": {
    "graphql": "16.11.0"
  }
}
