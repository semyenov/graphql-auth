{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "postinstall": "patch-package",
    "dev": "bun run src/server",
    "start": "bun dist/server.js",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run generate && bun build src/server.ts --outdir dist --target bun",
    "generate": "bun run generate:prisma && bun run generate:gql",
    "generate:prisma": "prisma generate",
    "generate:gql": "bunx gql.tada generate-output",
    "gen:schema": "bun run scripts/generate-schema.ts",
    "demo": "bun run src/h3-demo.ts",
    "seed": "bun run prisma/seed.ts",
    "db:reset": "bunx prisma migrate reset --force",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "env:verify": "bun run scripts/verify-environment.ts",
    "graphql:examples": "bun run -e 'import(\"./src/graphql-examples.ts\").then(m => m.runAllExamples())'"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "4.12.2",
    "@pothos/core": "^4.6.2",
    "@pothos/plugin-dataloader": "^4.4.1",
    "@pothos/plugin-errors": "^4.3.0",
    "@pothos/plugin-prisma": "^4.8.2",
    "@pothos/plugin-relay": "^4.4.2",
    "@pothos/plugin-scope-auth": "^4.1.3",
    "@pothos/plugin-validation": "^3.10.2",
    "@prisma/client": "^6.9.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "bcryptjs": "3.0.2",
    "consola": "^3.4.2",
    "dataloader": "^2.2.3",
    "fetchdts": "^0.1.4",
    "gql.tada": "^1.8.10",
    "graphql": "16.11.0",
    "graphql-middleware": "6.1.35",
    "graphql-scalars": "1.24.2",
    "graphql-shield": "7.6.5",
    "graphql-ws": "^6.0.5",
    "h3": "^1.15.3",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "9.0.2",
    "pathe": "^2.0.3",
    "rate-limiter-flexible": "^7.1.1",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "ws": "^8.18.2",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@context7/mcp-server": "^1.0.0",
    "@graphql-tools/mock": "^9.0.23",
    "@graphql-tools/schema": "^10.0.23",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.2.16",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.18.1",
    "jest-diff": "^30.0.0",
    "prisma": "^5.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "module": "index.ts",
  "type": "module",
  "private": true
}